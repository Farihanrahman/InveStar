# Server Configuration
PORT=3000
NODE_ENV=development

# Stellar Configuration
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_ANCHOR_SECRET_KEY=your_anchor_secret_key_here
STELLAR_ANCHOR_PUBLIC_KEY=your_anchor_public_key_here
USDC_ISSUER=your_usdc_issuer_here

# MoneyGram Configuration
MONEYGRAM_API_URL=https://api-sandbox.moneygram.com
MONEYGRAM_CLIENT_ID=your_client_id_here
MONEYGRAM_CLIENT_SECRET=your_client_secret_here
MONEYGRAM_PARTNER_ID=your_partner_id_here
MONEYGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Security
JWT_SECRET=your_jwt_secret_here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database (for production)
DATABASE_URL=your_database_url_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Transaction Limits
MIN_AMOUNT=10
MAX_AMOUNT=10000
DAILY_LIMIT=50000

# Exchange Rates (mock for development)
USD_TO_BDT_RATE=110.5
USDC_TO_USD_RATE=1.0 